{
  "name": "openpay",
  "description": "Openpay library",
  "version": "3.0.0",
  "repository": "https://github.com/open-pay/openpay-node",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/openpay.cjs",
  "module": "./dist/openpay.js",
  "types": "./dist/openpay.d.cts",
  "exports": {
    ".": {
      "types": "./dist/openpay.d.ts",
      "require": "./dist/openpay.cjs",
      "import": "./dist/openpay.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "rimraf dist && tsup src/*.ts --format cjs,esm --dts --no-splitting",
    "lint": "biome lint ./src",
    "test:mx": "vitest run mexico",
    "test:co": "vitest run colombia",
    "test:pe": "vitest run peru"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.2",
    "@types/node": "^20.12.10",
    "dotenv": "^16.4.5",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "ofetch": "^1.3.4"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
